# Database
# Database (SQLite for development)
DATABASE_URL="file:./dev.db"

# Server
PORT=3001
# Support comma-separated origins for local dev (e.g., 5173, 5174)
FRONTEND_URL="http://localhost:5173,http://localhost:5174"
NODE_ENV="development"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
# Token expiry; prefer JWT_EXPIRES_IN. JWT_EXPIRE_TIME kept for backward compat.
JWT_EXPIRES_IN="7d"
# JWT_EXPIRE_TIME="7d"

# File Upload
UPLOAD_PATH="uploads"
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (for future use)
EMAIL_FROM="noreply@leelaverse.com"
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""

# External APIs
OPENAI_API_KEY=""

# Security
BCRYPT_SALT_ROUNDS=12

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
