# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/leelaverse
# For MongoDB Atlas (Cloud Database), use format:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/leelaverse

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Email Configuration (for password reset, etc. - Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100