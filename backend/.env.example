# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration - Supabase PostgreSQL with Prisma
# Connect to Supabase via connection pooling (for serverless environments)
DATABASE_URL="postgresql://postgres.your-project-ref:your-password@aws-1-ap-south-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection to the database (used for Prisma migrations)
DIRECT_URL="postgresql://postgres.your-project-ref:your-password@aws-1-ap-south-1.pooler.supabase.com:5432/postgres"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/oauth/google/callback

# Session
SESSION_SECRET=your-session-secret-key-change-this-in-production

# FAL AI API (for image generation)
FAL_KEY=your-fal-ai-api-key

# Cloudinary Configuration (for image storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for password reset, etc. - Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
